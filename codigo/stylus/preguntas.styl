@require "base/utiles"
@require "nib"
@require "animations"
.paginas
	flex-direction column
	
	.cabecera
		text-align center
		h2
			color azul3
			font-size (20 / 16)rem
			border-bottom 1px solid azul3
			padding 2px 0
			display inline-block
			letter-spacing -0.5px
		h3
			color rojo4
			font-family 'PermanentMarker'
			font-size (35 / 16)rem
			font-weight bold
			letter-spacing -2px
			margin 30px 0
	.lista
		max-width 500px
		margin 0 auto
		.descrip
			font-size (20 / 16)rem
			text-align center
			line-height 20px
		ul
			border-top 1px dashed gris1
			margin-top 25px
			li
				border-bottom 1px dashed gris1
				&:hover
					background linear-gradient(to right, rgba(255,255,255,0) 2%,rgba(253,253,253,0) 3%,rgba(229,229,229,1) 18%,rgba(229,229,229,1) 80%,rgba(255,255,255,0) 100%)
					
				span
					display block
					padding 16px 40px 16px 60px
					font-weight bold
					font-size (14 / 16)rem
					&.check
						background url('../img/icons/check.png') no-repeat 18px 15px
					&.aspa
						background url('../img/icons/aspa.png') no-repeat 18px 15px
					
