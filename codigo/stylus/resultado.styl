@require "base/utiles"
@require "nib"
@require "animations"
.paginas
	flex-direction column

	.cabecera
		text-align center

		h3

			font-family 'PermanentMarker'
			font-size (46 / 16)rem
			color azul3
			font-weight bold
			letter-spacing -2px
			margin 30px 0
			+hasta( escritorio )
				font-size (30 / 16)rem
			.modo
				display block
				font-size (30 / 16)rem
				color rojo4
				margin-top 5px
				+hasta( escritorio )
					font-size (26 / 16)rem
		.sub
			font-size (20 / 16)rem

 	.box-txt
		background azul3
		width 460px
		height 157px
		margin 35px 0
		+hasta( escritorio )
			width auto
	.detalle
		max-width 280px
		font-size (14 / 16)rem
		color gris1
		text-align center
		+hasta( escritorio )
			max-width 100%

