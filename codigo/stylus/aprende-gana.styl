@require "base/utiles"
@require "nib"
@require "animations"


.opc
	text-align center
	li
		display inline-block
		margin 0 10px
		a
			&:hover
				img
					filter: grayscale(100%)
					opacity .3
			img
				transition all .4s
		.tit
			background azul4
			color blanco
			font-family 'Dinot-Light'
			margin-top -2px
			display flex
			align-items center
			justify-content space-between
			padding 20px 10px
			transition all .4s
			
			.number
				width 20%
				font-family 'Dinot'
				font-size (74.38 / 16)rem
				text-align center
			.letra
				width 78%
				text-align left
				font-size (22 / 16)rem
				letter-spacing -1.5px
				span
					display block
					font-weight bold
					margin-bottom 3px
		&:hover
			.tit
				filter: grayscale(100%)
				opacity .3
.subtit
	max-width 690px
	margin 65px auto